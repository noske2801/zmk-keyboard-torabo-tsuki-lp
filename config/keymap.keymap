    macros {
        // AMLを解除するマクロ
        /omit-if-no-ref/

        exit_AML: exit_AML {
            compatible = "zmk,behavior-macro";
            wait-ms = <0>;
            tap-ms = <0>;
            #binding-cells = <0>;
            bindings = <&tog_off MOUSE>;
        };

        // KeyPress後にAMLを解除するマクロ
        /omit-if-no-ref/

        kp_exit_AML: kp_exit_AML {
            compatible = "zmk,behavior-macro-one-param";
            wait-ms = <0>;
            tap-ms = <0>;
            #binding-cells = <1>;
            bindings = <&macro_param_1to1 &kp MACRO_PLACEHOLDER &exit_AML>;
        };

        // IME onと同時にローマ字レイヤーを有効にするマクロ
        /omit-if-no-ref/

        macro_ime_on: ime_on_romaji_layer {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <
                &macro_tap &kp LANG1
                &tog_on ROMAJI
            >;
        };

        // IME offと同時にデフォルトレイヤーに切り替えるマクロ
        /omit-if-no-ref/

        macro_ime_off: ime_off_default_layer {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <
                &macro_tap &kp LANG2
                &macro_wait_time 200
                &tog_off ROMAJI
                &tog_off ROMAJI_SHIFT
            >;
        };

        // Alt+Tab起動マクロ
        /omit-if-no-ref/

        alt_tab_trigger: alt_tab_trigger {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <
                &macro_press &kp LALT
                &macro_tap &kp TAB
                &macro_pause_for_release

                &macro_release &kp LALT
            >;
        };

        // GoogleChromeでページ翻訳を行うショートカット
        /omit-if-no-ref/

        sc_chrome_translate: sc_chrome_translate {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp LS(F10) &kp T>;
            label = "SC_CHROME_TRANSLATE";
        };
    };


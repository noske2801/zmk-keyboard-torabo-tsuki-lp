        };

        /omit-if-no-ref/
        // 右手用修飾キー

        mt_mod_R: mt_mod_R {
            compatible = "zmk,behavior-hold-tap";
            label = "mt_mod_R";
            #binding-cells = <2>;
            bindings = <&kp>, <&kp_exit_AML>;

            tapping-term-ms = <350>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <200>;
            flavor = "balanced";
            hold-trigger-key-positions = <KEYS_L THUMBS>;
            hold-trigger-on-release;
        };

        /omit-if-no-ref/
        // MOUSEレイヤー用修飾キー

        mt_mod_MOUSE: mt_mod_MOUSE {
            compatible = "zmk,behavior-hold-tap";
            label = "mt_mod_MOUSE";
            #binding-cells = <2>;
            bindings = <&kp>, <&kp_exit_AML>;

            tapping-term-ms = <200>;
            quick-tap-ms = <175>;
            // require-prior-idle-ms = <150>;

// マウス機能の設定

&zip_temp_layer {
    require-prior-idle-ms = <200>; // キー入力から指定の時間(ms)、AMLを有効にしない(誤爆防止)
    excluded-positions = <
  /* ここで指定しないキー(非マウスキー)を押したとき、AMLを解除 */
        15 // E(SCROLL)
        20 // I(SCROLL)

        25 // A(GUI)
        26 // S(Ctrl)
        27 // D(Shift)
        28 // F(Alt)

        33 // J(LMB)
        34 // K(MMB)
        35 // L(RMB)

        57 // SandS
    >;
};

&trackball_listener {
    compatible = "zmk,input-listener";
    input-processors = <
        /* カーソル方向の反転 */
        &zip_xy_transform (INPUT_TRANSFORM_X_INVERT | INPUT_TRANSFORM_Y_INVERT)

        /* カーソル速度の変更 */
        &zip_x_scaler 1 1 /* X軸方向の速度を a/b倍 に調整 */
        &zip_y_scaler 1 1 /* Y軸方向の速度を a/b倍 に調整 */
        &zip_temp_layer MOUSE 10000 /* (AMLを適用するレイヤー, レイヤーが解除されるまでの時間(ms)) */
    >;

    precision_mode {
        layers = <LOWER>;
        input-processors = <
            &zip_xy_scaler 1 4 /* カーソル速度を a/b倍 に調整 */
            &zip_temp_layer MOUSE 10000
        >;

        process-next;
    };

    scroller {
        layers = <SCROLL>; /* このレイヤーにいるとき自動的にスクロールモードに変更 */
        input-processors = <
            &zip_xy_to_scroll_mapper
            &zip_scroll_transform (INPUT_TRANSFORM_X_INVERT) /* X軸方向の動きを反転 */
            &zip_scroll_scaler 1 10 /* スクロールの速度を a/b倍 に調整 */
        >;

        process-next;
    };
};

&mkp_input_listener {
    input-processors = <&zip_temp_layer MOUSE 10000>; // マウスボタンを押した後、指定の時間(ms)AMLを延長
};

// Mod-Tap

&mt {
    tapping-term-ms = <200>;
    quick-tap-ms = <250>;
    flavor = "balanced";
};

// Layer-Tap

&lt {
    tapping-term-ms = <200>;
    quick-tap-ms = <(-1)>;
    require-prior-idle-ms = <(-1)>;
    flavor = "hold-preferred";
    hold-while-undecided; // KeyPress後 すぐにHold-behaviorが開始
};


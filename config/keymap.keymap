            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <0>;
            bindings = <&kp COMMA>, <&kp EXCLAMATION>;

            mods = <(MOD_LSFT | MOD_RSFT)>;
        };

        /omit-if-no-ref/
        // <Shift + .>で<?>を入力

